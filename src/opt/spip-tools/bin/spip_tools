#!/bin/bash

function prefix
{
    dirname $0 | sed 's/\(.*\)\/bin$/\1/'
}

if [ "$1" = "--prefix" ]; then
    prefix
fi

if [ "$1" = "--env" ]; then
    source $(prefix)/share/spip_communs
    source $(prefix)/share/semver
    #TODO -f /etc/spip-tools.conf
    #TODO -d /etc/spip-tools.d/*.conf
    #TODO -f ~/.spip/spip-tools.conf
    env | grep -e "^SPIP"
    env | grep -e "^SVN_SPIP"
fi

if [ "$1" = "--conf" ]; then
    if [ -f /etc/spip-tools.conf ]; then
        cat /etc/spip-tools.conf
    fi
fi

if [ "$1" = "--help" ]; then
    echo "TODO"
fi

if [ "$1" = "--version" ]; then
    echo "TODO"
fi
